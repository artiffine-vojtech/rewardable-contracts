{
  "trailingComma": "es5",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": false,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 130
      }
    }
  ],
  "plugins": ["prettier-plugin-solidity"]
}