{
  "name": "@artiffine/hardhat",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "chain": "npx hardhat tasksOnInit && npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean",
    "format": "prettier --write \"*/**/*.{js,ts,tsx,css,md,json,sol}\"",
    "deploy:localhost": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:base": "npx hardhat run scripts/deploy.ts --network base",
    "deploy:basesepolia": "npx hardhat run scripts/deploy.ts --network basesepolia",
    "flatten": "npx hardhat flatten contracts/NFTContract.sol > output.sol",
    "etherscan:verify:goerli": "npx hardhat run scripts/etherscanVerify.ts --network goerli",
    "etherscan:verify:mainnet": "npx hardhat run scripts/etherscanVerify.ts --network mainnet",
    "etherscan:verify:polygon": "npx hardhat run scripts/etherscanVerify.ts --network polygon",
    "etherscan:verify:base": "npx hardhat run scripts/etherscanVerify.ts --network base",
    "etherscan:verify:basesepolia": "npx hardhat run scripts/etherscanVerify.ts --network basesepolia",
    "type-check": "echo 'not implemented'",
    "lint:ts": "echo 'not implemented'"
  },
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/prompt-sync": "^4.2.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "1.0.1",
    "chai": "^4.3.7",
    "chalk": "^4.1.2",
    "cli-select": "^1.1.2",
    "csv-parse": "^5.5.3",
    "erc721a": "^4.2.3",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-uniswap": "^1.1.0",
    "mocha-param": "^2.0.1",
    "node-hid": "2.1.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "prompt-sync": "^4.2.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  }
